{
  "manifest_version": 2,
  "name": "PhDify Append",
  "version": "1.0",

  "description": "Adds the title \", Ph.D.\" to all untitled instances of everyone's favorite CSCI 201 professor",

  "icons": {
    "48": "icons/jmiller_phd_48.png",
    "96": "icons/jmiller_phd_96.png",
    "100": "icons/jmiller_phd.jpg"
  },

  "content_scripts": [
    {
      "matches": ["file:///*"],
      "js": ["append-title.js"]
    },
    {
      "matches": ["*://*.usc.edu/*"],
      "js": ["append-title.js"]
    }
  ],

  "applications": {
    "gecko": {
      "id": "dsilvers@usc.edu"
    }
  }

}
